<%-include("header.ejs")%>
    <section class="login d-flex justify-content-center">
        <div class="col-6">  
        <main class="form-signin h-75 w-100 m-auto">
          <form action="/login" method="POST">
            <img class="mb-4" src="ns.png" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        
            <div class="form-floating">
              <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
              <label for="floatingInput">Email address/Username</label>
            </div>
            <div class="form-floating mt-3">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
              <label for="floatingPassword">Password</label>
            </div>
        
            <div class="form-check text-start my-3">
              <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                Remember me
              </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
          </form>
          <div class="container">
            <p class="d-flex" style="gap:6px;">Not signed up yet?Please got to sign up page here. <a href="/callsignup" style="text-decoration: none;">Sign Up</a></p>
          </div>
        </div>
      </div>
        </main>
        <container id="my-app-container"></container></body>
    </section>
<%-include("footer.ejs")%>